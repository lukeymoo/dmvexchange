extends layouts/layout

block headerMenu
	ul(id='headerMenu', data-selected='false')
		if USER.LOGGED_IN
			a(href='/market')
				li Home
			a(href='/account')
				li Account
			a(href='/logout')
				li Logout
		else
			a(href='/')
				li Home
			a(href='/signin')
				li Log in
			a(href='/signup')
				li Sign up
			a(href='/tips')
				li Have tips?
	div(id='pageMessage')
	div(id='notification_container')

block accountBlock
	div(id='accountControlsContainer')
		span Settings
		div(id='accountTab', data-selected='true') Account
		div(id='passwordTab', data-selected='false') Password

	div(id='accountPanel')
		div(id='accountHeader') Account settings
		div(id='accountSettings')

			div(id='usernameContainer')
				label(id='usernameLabel') Username
				span(value='#{USER.USERNAME}', id='currentUsername') #{USER.USERNAME}

			div(id='emailContainer')
				label(id='linkedEmailLabel') Linked emails
				span(value='#{USER.EMAIL}', id='primaryEmail') Primary: #{USER.EMAIL}
				if DATA
					each item in DATA
						span(value='#{item}', class='email')= item
							button(id='removeEmail') Remove
				button(id='addEmail') Add new email

		div(id='passwordPanel')
			label Enter current password
			br
			input(id='currentPassword', type='password')
			br
			label Enter new password
			br
			input(id='newPassword', type='password')
			br
			label Confirm new password
			br
			input(id='newPasswordAgain', type='password')
			br
			button Change password

block loginForm
	div(id='loginFormErrorContainer') 
	div(id='loginFormContainer')
		div(id='loginFormHeader') Sign in
		form(id='loginForm', action='/auth', method='post')
			label Username or email
			input(id='username', name='u', type='text', tabindex=1)
			input(id='password', name='p', type='password', tabindex=2)
			a(href='/forgot')
				span(tabindex=4) forgot password?
		button(tabindex=3) Sign in
		a(href='/signup')
			div(id='signupNow') Don't have an account?

block registerForm
	div(id='registerFormContainer')
		div(id='registerFormHeader') Sign up
		form(id='registerForm', action='/process', method='post')
			label(id='firstnameLabel') First name
			label(id='lastnameLabel') Last name
			br
			input(id='firstname', name='f', type='text', tabindex=1)
			input(id='lastname', name='l', type='text', tabindex=2)
			br
			div(id='nameError') 
			br
			label Email address
			br
			input(id='email', name='e', type='text', tabindex=3)
			br
			div(id='emailError') 
			br
			label Confirm email
			br
			input(id='emailAgain', name='ea', type='text', tabindex=4)
			br
			div(id='emailAgainError') 
			br
			label Desired username
			br
			input(id='username', name='u', type='text', tabindex=5)
			br
			div(id='usernameError') 
			br
			label(id='passwordLabel') Desired password
			label(id='passwordAgainLabel') Confirm password
			br
			input(id='password', name='p', type='password', tabindex=6)
			input(id='passwordAgain', name='pa', type='password', tabindex=7)
			br
			div(id='passwordError') 
			br
			div(id='tosContainer')
				input(type='checkbox', name='tos', value='I_AGREE', tabindex=8)
				span(id='tosLetter')
					| By clicking here you agree to our 
					a(target='_blank', href='/policy.html', style='color: rgb(0, 100, 225);') terms of service
			div(id='tosError') 
		button(tabindex=9) Sign up
		a(href='/signin')
				div(id='signinNow') Already have an account ?

block mailBlock
	div(id='mailWrapper')
		div(id='pageMessage')
		div(id='backgroundBlur')

		div(id='viewerContainer')
			div(id='viewerControls')
				div(id='back')
					label(id='backLabel') back
				div(id='trash') Trash
				div(id='reply') Reply
			div(id='viewerContent')
				div(id='subject') 
				div(id='from') 
				div(id='to') 
				div(id='text') 
				
		
		div(id='composeForm', data-active='false')
			div(id='header') New message
				div(id='controls')
					div(id='close') &times;

			div(id='messageToContainer')
				div(id='chipsContainer')
				div(id='inputContainer')
					input(id='messageTo', type='text', placeholder='Add Recipient', tabindex=1)
			input(id='messageSubject', type='text', placeholder='Message Subject', tabindex=2)
			textarea(id='messageText', placeholder='Message...', tabindex=3)
			button(id='sendMessage') Send
			button(id='messageImage') Image
			button(id='cancelMessage') Cancel

		div(id='mailControlsContainer')
			div(id='mailControls')
				div(id='compose') Compose
				div(id='inbox', data-selected='true') Inbox
